<div id="<%= dom_id answer %>">
  <p class="my-5">
    <%= answer.body %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this answer", answer, class: "rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this answer', edit_answer_path(answer), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
